<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="agtc.sampletracking.model">
	<class
		name="User"
		table="USERS"
	>
		<id
			name="userId"
			type="integer"
			column="USER_ID"
			unsaved-value="-1"
		>
				<generator class="native" />
		</id>

		<property
			name="loginname"
			column="LOGINNAME"
			type="string"
			not-null="true"
			length="32"
		/>
		<property
			name="password"
			column="PASSWORD"
			type="string"
			not-null="true"
			length="64"
		/>

		<property
			name="activity"
			column="ACTIVITY"
			type="string"
			not-null="true"
			length="3"
		/>
		<property
			name="firstName"
			column="FIRST_NAME"
			type="string"
			not-null="false"
			length="20"
		/>
		<property
			name="lastName"
			column="LAST_NAME"
			type="string"
			not-null="false"
			length="20"
		/>

		<set name="UserRoles" inverse="true">
			<key column="USER_ID"/>
			<one-to-many class="UserRoles"/>
		</set>


	</class>	
</hibernate-mapping>
