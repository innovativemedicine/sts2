<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="agtc.sampletracking.model">
	<class
		name="Roles"
		table="ROLES"
	>
		<id
			name="id"
			type="integer"
			column="ROLE_ID"
			unsaved-value="-1"
		>
				<generator class="native" />
		</id>

		<property
			name="name"
			column="NAME"
			type="string"
			not-null="true"
			length="32"
		/>
		<property
			name="description"
			column="DESCRIPTION"
			type="string"
			not-null="false"
			length="32"
		/>
		<property
			name="note"
			column="NOTE"
			type="string"
			not-null="false"
			length="64"
		/>
	

		<set name="UserRoles" inverse="true">
			<key column="ROLE_ID"/>
			<one-to-many class="UserRoles"/>
		</set>


	</class>	
</hibernate-mapping>